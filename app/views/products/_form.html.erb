<p class ="text-left">
<%= simple_form_for @product do |f| %>
      <%= f.input :name, placeholder: "Name", label: "Product name" %>
      <%= f.input :tagline, placeholder: "Short resume", label: "Tagline" %>
      <%= f.input :url, as: :url, label: "URL", input_html: { value: "http://" } %>
      <%= f.input :description, as: :text, placeholder: "long resume", label: "Description" %>
      <%= f.input :category, collection: ["Analyse_tools", "Biology", "CFD","Chemitry", "DATA_Analytics", "Design_3D", "Education", "Energy", "Food", "IT", "Material", "Mathematic", "Process_Simulation", "Schema_2D", "Sizing", "Tech"], prompt:"Category" %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.button :submit, "ADD", class: "btn btn-primary btn-lg btn-block btn-color" %>
  <% end %>
</p>